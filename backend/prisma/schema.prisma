generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Post {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  text     String
  image    String?
  user     User? @relation(fields: [userId], references: [id])
  userId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("posts")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  image    String?
  email    String?
  post     Post[]
  @@map("users")
}